<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".back_up.ui.user_order.InfoUserOrderActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar.Custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:paddingStart="@dimen/space_8"
            android:paddingEnd="@dimen/space_8"
            app:contentInsetStartWithNavigation="0dp"
            app:title="@string/user_data_order" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_90"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hintInfoUserTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="@string/user_info"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardInfoUserCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="@dimen/dimen_4"
                app:cardElevation="@dimen/dimen_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hintInfoUserTV">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorNavyDark"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_16">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/name"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/semicolon"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/userTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/dash"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/space_8"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/address"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/semicolon"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/addressTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/dash"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/e_mail"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/semicolon"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/emailTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/dash"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/nomor_hp"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/semicolon"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/phoneTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/dash"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />
                        </TableRow>
                    </TableLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorDivider" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:padding="@dimen/dimen_16">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/transaction_type"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/semicolon"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/userTypeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/dash"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/paket"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/semicolon"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/packageTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/dash"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/hintGuestTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:includeFontPadding="false"
                android:text="@string/order_for"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardInfoUserCV"
                tools:text="@string/user_info" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardGuestCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="@dimen/dimen_4"
                app:cardElevation="@dimen/dimen_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hintGuestTV"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorNavyDark"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        android:padding="@dimen/dimen_16">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/name"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/semicolon"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/guestNameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/dash"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/image_id_card"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/dimen_8"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/semicolon"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/imageStatusTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/dash"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/text_14" />
                        </TableRow>
                    </TableLayout>

                    <ImageView
                        android:id="@+id/idCardUserIV"
                        android:layout_width="@dimen/space_220"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="@dimen/space_16"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/placeholder" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_90"
        android:layout_gravity="bottom"
        android:background="@color/colorNavy">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/colorNavyDark" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitMB"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_16"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/montserrat_bold"
            android:letterSpacing="0"
            android:padding="@dimen/dimen_16"
            android:text="@string/see_detail"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_16"
            app:iconGravity="textStart"
            app:iconTint="@color/colorWhite" />
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>