<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    android:paddingBottom="@dimen/space_16"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorNavyDark">

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:text="@string/dummy_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locationNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:text="@string/dummy_name_apartment"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/size_14"
        app:layout_constraintEnd_toStartOf="@+id/statusTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTV" />

    <TextView
        android:id="@+id/facilityNameTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:includeFontPadding="false"
        android:text="@string/dummy_facility_name"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/size_14"
        app:layout_constraintEnd_toEndOf="@+id/locationNameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationNameTV" />

    <TextView

        android:id="@+id/invoiceTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:includeFontPadding="false"
        android:text="@string/dummy_invoice"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facilityNameTV" />

    <TextView
        android:id="@+id/requestDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_corner_outline_grey_r6"
        android:gravity="center"
        android:padding="@dimen/space_8"
        android:text="@string/dummy_check_in"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/size_10"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoiceTV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/confirmDateTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_corner_outline_grey_r6"
        android:gravity="center"
        android:padding="@dimen/space_8"
        android:text="@string/dummy_check_in"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/size_10"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestDateTV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/statusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_blue_r50"
        android:gravity="center"
        android:paddingStart="@dimen/space_16"
        android:paddingTop="@dimen/space_8"
        android:paddingEnd="@dimen/space_16"
        android:paddingBottom="@dimen/space_8"
        android:text="@string/check_in"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_10"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/priceTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_corner_outline_white_r50"
        android:gravity="center"
        android:paddingStart="@dimen/space_16"
        android:paddingTop="@dimen/space_8"
        android:paddingEnd="@dimen/space_16"
        android:paddingBottom="@dimen/space_8"
        android:text="@string/dummy_price_no_rp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/size_14"
        android:textStyle="bold"
        android:drawablePadding="@dimen/space_8"
        app:layout_constraintBottom_toBottomOf="@+id/requestDateTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/requestDateTV"
        app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_16"
        app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>