<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/imageHintTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="@string/add_facility_image"
        android:textSize="@dimen/size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_100"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/colorNavyDark"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="@dimen/space_0"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageHintTV"
        app:layout_constraintTop_toBottomOf="@+id/imageHintTV">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_3"
            android:text="@string/figure_1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_16"
            app:drawableTint="@color/colorGreenLight"
            app:drawableTopCompat="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomDescTIL" />

        <ImageView
            android:id="@+id/image1IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_100"
        app:cardBackgroundColor="@color/colorNavyDark"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="@dimen/space_0"
        app:layout_constraintEnd_toEndOf="@+id/imageHintTV"
        app:layout_constraintStart_toStartOf="@+id/imageHintTV"
        app:layout_constraintTop_toTopOf="@+id/cardView1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_3"
            android:text="@string/figure_2"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_16"
            app:drawableTint="@color/colorGreenLight"
            app:drawableTopCompat="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomDescTIL" />

        <ImageView
            android:id="@+id/image2IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_100"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorNavyDark"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="@dimen/space_0"
        app:layout_constraintEnd_toEndOf="@+id/imageHintTV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/imageHintTV">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_3"
            android:text="@string/figure_3"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_16"
            app:drawableTint="@color/colorGreenLight"
            app:drawableTopCompat="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomDescTIL" />

        <ImageView
            android:id="@+id/image3IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_100"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/colorNavyDark"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="@dimen/space_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageHintTV"
        app:layout_constraintTop_toBottomOf="@+id/cardView1"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_3"
            android:text="@string/figure_4"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_16"
            app:drawableTint="@color/colorGreenLight"
            app:drawableTopCompat="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomDescTIL" />

        <ImageView
            android:id="@+id/image4IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_100"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorNavyDark"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="@dimen/space_0"
        app:layout_constraintBottom_toBottomOf="@+id/cardView4"
        app:layout_constraintEnd_toEndOf="@+id/imageHintTV"
        app:layout_constraintStart_toStartOf="@+id/imageHintTV"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_3"
            android:text="@string/figure_5"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_16"
            app:drawableTint="@color/colorGreenLight"
            app:drawableTopCompat="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomDescTIL" />

        <ImageView
            android:id="@+id/image5IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_100"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/colorNavyDark"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="@dimen/space_0"
        app:layout_constraintBottom_toBottomOf="@+id/cardView5"
        app:layout_constraintEnd_toEndOf="@+id/imageHintTV"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/space_3"
            android:text="@string/figure_6"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_16"
            app:drawableTint="@color/colorGreenLight"
            app:drawableTopCompat="@drawable/ic_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomDescTIL" />

        <ImageView
            android:id="@+id/image6IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:src="@android:color/transparent" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>